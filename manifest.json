{
  "manifest_version": 2,

  "name": "Build Slacker",
  "short_name": "BS",
  "description": "Alerts team via Slack when a Team City build kicks off.",
  "version": "1.1",
  "content_scripts": [
    {
      "matches": ["*://teamcity/*"],
      "js": ["build-slacker.js"],
      "run_at":    "document_idle"
    }
  ],
  "browser_action": {
    "default_icon": "extension-icon.png",
    "default_popup": "popup.html",
    "default_title": "Build Slacker"
  },
  "permissions": [
    "storage",
    "activeTab",
    "webNavigation",
    "*://teamcity*"
  ]
}
